<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>üéÆ Event Hero: Save the Campaign!</title>
  <style>
    :root {
      --primary-color: #4a6bff;
      --secondary-color: #ff6b6b;
      --accent-color: #6bff6b;
      --background-gradient: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      --ground-color: #5d4037;
      --text-color: #2d3436;
      --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --player-size: 70px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: var(--background-gradient);
      color: var(--text-color);
      overflow: hidden;
      height: 100vh;
      touch-action: manipulation;
    }

    #gameContainer {
      position: relative;
      width: 100%;
      height: 100vh;
      overflow: hidden;
    }

    #gameUI {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      z-index: 10;
    }

    #score, #highScore {
      background: rgba(255, 255, 255, 0.8);
      padding: 10px 20px;
      border-radius: 20px;
      font-size: 1.2rem;
      font-weight: bold;
      box-shadow: var(--shadow);
    }

    #player {
      width: var(--player-size);
      height: var(--player-size);
      background: url('https://emojicdn.elk.sh/ü¶∏?style=google') no-repeat center/contain;
      position: absolute;
      bottom: 30px;
      left: 50px;
      z-index: 5;
      transition: transform 0.1s;
    }

    .item, .obstacle {
      width: 50px;
      height: 50px;
      position: absolute;
      background-size: contain;
      background-repeat: no-repeat;
      z-index: 4;
      transition: transform 0.1s;
    }

    #ground {
      position: absolute;
      bottom: 0;
      height: 30px;
      width: 100%;
      background: var(--ground-color);
      z-index: 3;
      box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.2);
    }

    .cloud {
      position: absolute;
      background: rgba(255, 255, 255, 0.8);
      border-radius: 50%;
      z-index: 1;
    }

    #startScreen, #gameOverScreen {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 20;
      color: white;
      text-align: center;
    }

    #gameOverScreen {
      display: none;
    }

    .screen-content {
      background: white;
      padding: 30px;
      border-radius: 15px;
      max-width: 400px;
      color: var(--text-color);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }

    h1 {
      color: var(--primary-color);
      margin-bottom: 20px;
      font-size: 2.5rem;
    }

    p {
      margin-bottom: 20px;
      line-height: 1.6;
    }

    button {
      background: var(--primary-color);
      color: white;
      border: none;
      padding: 12px 25px;
      font-size: 1.1rem;
      border-radius: 30px;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: var(--shadow);
    }

    button:hover {
      background: var(--secondary-color);
      transform: translateY(-2px);
    }

    .particle {
      position: absolute;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      pointer-events: none;
      z-index: 6;
    }

    .powerup {
      position: absolute;
      width: 40px;
      height: 40px;
      background-size: contain;
      background-repeat: no-repeat;
      z-index: 4;
      animation: float 2s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    @keyframes jump {
      0% { transform: translateY(0); }
      50% { transform: translateY(-120px); }
      100% { transform: translateY(0); }
    }

    .jump-animation {
      animation: jump 0.8s cubic-bezier(0.5, 1, 0.89, 1);
    }

    .collect-animation {
      transform: scale(1.5);
      opacity: 0;
      transition: all 0.3s;
    }

    .invincible {
      filter: drop-shadow(0 0 10px gold);
    }

    #invincibilityBar {
      position: absolute;
      bottom: 60px;
      left: 50px;
      width: var(--player-size);
      height: 5px;
      background: linear-gradient(to right, gold, orange);
      border-radius: 5px;
      display: none;
      z-index: 6;
    }

    #comboCounter {
      position: absolute;
      top: 70px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 1.2rem;
      font-weight: bold;
      display: none;
      z-index: 11;
    }
